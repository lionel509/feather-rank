# syntax=docker/dockerfile:1
FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=on \
    PIP_NO_CACHE_DIR=on \
    LOG_LEVEL=DEBUG \
    TEST_MODE=1 \
    EPHEMERAL_DB=1 \
    DATABASE_PATH=/tmp/test_feather_rank.sqlite

WORKDIR /app

COPY requirements.txt ./
RUN python -m pip install --upgrade pip \
    && pip install -r requirements.txt

COPY . .

# Use a non-root user
RUN useradd -m appuser && chown -R appuser:appuser /app
USER appuser

# Default command runs the built-in test suite
CMD ["python", "test.py"]

# Alternative: run the minimal test bot (uncomment to use as default)
# CMD ["python", "test_bot_run.py"]
